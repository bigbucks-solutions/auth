{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchDatasources": [
        "docker",
        "golang-version"
      ],
      "matchPackageNames": [
        "golang",
        "go"
      ],
      "allowedVersions": "1.25"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "postgres"
      ],
      "allowedVersions": "18"
    }
  ]
}
